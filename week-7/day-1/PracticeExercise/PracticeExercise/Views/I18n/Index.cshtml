@model string[]
@{ var random = new Random(); }
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <p>
        @foreach (var hello in @Model)
        {
            <span style="color:rgb(@random.Next(0,255), @random.Next(0,255), @random.Next(0,255)); 
                  font-size: @random.Next(25, 62)px;
                  padding: @random.Next(4, 10)px;
                  text-weight: @random.Next(1,10) ">
                @hello
            </span>
        }
    </p>
</body>
</html>