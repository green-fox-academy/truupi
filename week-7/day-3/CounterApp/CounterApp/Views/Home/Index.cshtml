@model CounterApp.Models.Counter
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Counter application</title>
    <style>
        body {
            font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            text-align:center;
            font-size: 30px;
            text-transform:uppercase;
        }

        p {
            color: crimson;
        }

        #increasebutton {
            background-color: crimson;
            border-color: crimson;
            border-style: initial;
            border-width: 15px;
            color: white;
            font-size: 40px;
            height: 150px;
            text-wrap: unset;
            font-weight:bold;
            white-space: normal;
            width: 150px;
        }
    </style>
</head>
<body>
    <h1>Counter application</h1>
    <h2>
        The number of submits: 
        <p>@Model.Counted</p>
    </h2>
    <h2>
        The Button:
    </h2>
    <p>
        @using (Html.BeginForm("index", "home"))
        {
            <input id="increasebutton" type="submit" name="increaser" value="PUSH ME" />
        }
    </p>
</body>
</html>