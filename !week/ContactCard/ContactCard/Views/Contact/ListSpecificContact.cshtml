@model ContactCardApp.Models.ContactCard
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@Model.FirstName @Model.LastName's Contact Card</title>
    <link rel="stylesheet" href="~/css/SpecificContactStylesheet.css">
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Home</a></li>
                    <li><a href="/listcontacts">List Cards</a></li>
                    <li><a href="/addcard">Add Cards</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div class="card">
        <img src="@Model.ImageLink" alt="Picture">
        <h1>@Model.FirstName @Model.LastName</h1>
        <p class="title">@Model.Job, @Model.CompanyName</p>
        <p>@Model.EmailAddress</p>
        <p><button>Contact</button></p>
    </div>
</body>
</html>